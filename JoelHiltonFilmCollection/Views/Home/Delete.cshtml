@{
    ViewData["Title"] = "Delete Film";
}

@model JoelHiltonFilmCollection.Models.FilmCollection

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the film @Model.Title?</h3>
<form asp-action="Delete" method="post">
    <button class="btn btn-danger">Delete</button>
    <a asp-action="ViewFilms">Cancel</a>
    <input type="hidden" asp-for="FilmId" />
</form>
