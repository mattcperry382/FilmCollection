@{
    ViewData["Title"] = "Add Movie";
}

@model JoelHiltonFilmCollection.Models.FilmCollection

<div class="container">
    <h1>Add a Movie:</h1>
    <form class="form-control-lg" method="post">
        <div asp-validation-summary="All"></div>
        <label class="col-form-label-sm" asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
        <label class="col-form-label-sm" asp-for="Title">Title:</label>
        <input class="form-text" type="text" asp-for="Title" />
        <label class="col-form-label-sm" asp-for="Year">Year:</label>
        <input class="form-text" type="text" asp-for="Year" />
        <label class="col-form-label-sm" asp-for="Director">Director:</label>
        <input class="form-text" type="text" asp-for="Director" />
        <br />
        <label class="col-form-label-sm" asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label class="col-form-label-sm" asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value='true'>Yes</option>
            <option value='false'>No</option>
        </select>
        <br />
        <label class="col-form-label-sm" asp-for="LentTo">Lent To:</label>
        <input class="form-text" type="text" asp-for="LentTo" />
        <label class="col-form-label-sm" asp-for="Notes">Notes:</label>
        <input class="form-text" type="text" asp-for="Notes" />
        <br />
        <button class="btn btn-primary">Add Movie</button>
    </form>
</div>